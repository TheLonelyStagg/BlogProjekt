<h1>Tagi</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Nazwa</th>
    <th>Ilosc w PostTag</th>
    <th></th>
  </tr>

  <% for tags in @tags %>
    <tr>
      <td><%=tags.id %></td>
      <td><%=tags.tagName %></td>
      <td><%= PostTag.where('tag_id = ?', tags.id).count %></td>
      <td><%= link_to "Usun ", tags, :method=>:delete, :class=>:destroy %></td>
      <td><%= link_to "PokaÅ¼ posty z tagiem", :controller => 'tags', :action =>'show', :param => tags.id %></td>
    </tr>
  <% end %>
</table>
