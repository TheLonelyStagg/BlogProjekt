<%= form_with scope: :post, url: blog_posts_path, html: {multipart: true}, local: true do |form| %>


  <p>
    <%= form.label :image %><br />
    <%= form.file_field :image %>
  </p>
  <p>
    <%= form.label :title %><br />
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :text_content %><br />
    <%= form.text_area :text_content %>
  </p>
