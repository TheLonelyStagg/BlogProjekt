
<div class="container">
    <div class="row">
        <div class="col">

        </div>
        <div class="col-6">
          <h1>Utwórz post na <%= @nazwa %></h1>

          <%= form_with scope: :post, url: blog_posts_path, html: {multipart: true}, local: true do |form| %>

              <div class="form-group">
                <p>
                  <%= form.label :title, "Tytuł postu" %><br />
                  <%= form.text_field :title, :class => "form-control" %>
                </p>
              </div>

            <div class="form-group">
              <p>
                <%= form.label :text_content, "Treść" %><br />
                <%= form.text_area :text_content, :class => "form-control", :size => 200 %>
              </p>
            </div>

            <div class="form-group">
              <p>
                <%= form.label :image, "Obrazek" %><br />
                <%= form.file_field :image%>
              </p>
            </div>

            <div class="form-group">
              <p>
                <%= form.label :tagipostu, "Tagi postu", title: 'Przykładowe dodane tagów: psy,koty,muzyka', 'data-toggle' => 'tooltip', 'data-placement' => 'right'%> <br/>
                <%= form.text_field :tagipostu, :class => "form-control" %>
              </p>
            </div>


            <p>
              <%= form.submit "Dodaj post", :class => "btn btn-success"%>
            </p>
          <% end %>

        </div>

        <div class="col">

        </div>
    </div>
</div>

