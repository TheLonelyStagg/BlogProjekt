<h1>Edytuj post na blogu -> <%= @nazwa %></h1>

<%= form_for([@post.blog,@post]) do |form| %>

  <p>
    <%= form.label :image %><br />
    <%= form.file_field :image %>
  </p>
  <p>
    <%= form.label :title %><br />
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :text_content %><br />
    <%= form.text_area :text_content %>
  </p>
  <p>
    <%= form.label :status %><br />
    <%= form.text_field :status %>
  </p>

  <p>
    <%= form.label :tagipostu %> <br/>
    <%= form.text_field :tagipostu %>
  </p>

  <p>
    <%= form.label :ifTop %><br />
    <%= form.check_box :ifTop %>
  </p>
  <p>
    <%= form.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', blog_posts_path %>

