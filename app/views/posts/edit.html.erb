
<div class="container">
  <div class="row">
    <div class="col">

    </div>
    <div class="col-6">
      <h1>Edytuj post na <%= @nazwa %></h1>

      <%= form_for([@post.blog,@post]) do |form| %>

        <div class="form-group">
          <p>
            <%= form.label :title, "Tytuł postu" %><br />
            <%= form.text_field :title, :class => "form-control" %>
          </p>
        </div>

        <div class="form-group">
          <p>
            <%= form.label :text_content, "Treść" %><br />
            <%= form.text_area :text_content, :class => "form-control", :size => 200 %>
          </p>
        </div>

        <div class="form-group">
          <p>
            <%= form.label :image, "Obrazek" %><br />
            <%= form.file_field :image%>
          </p>
        </div>

        <div class="form-group">
          <p>
            <%= form.label :tagipostu, "Tagi postu", title: 'Przykładowe dodane tagów: psy,koty,muzyka', 'data-toggle' => 'tooltip', 'data-placement' => 'right'%> <br/>
            <%= form.text_field :tagipostu, :class => "form-control" %>
          </p>
        </div>

        <p>
          <%= form.label :ifTop ,"Czy przypiąć?"%><br />
          <%= form.check_box :ifTop %>
        </p>
        <p>
          <%= form.submit "Edytuj", :class => "btn btn-primary" %>
        </p>
      <% end %>

    </div>

    <div class="col">

    </div>
  </div>
</div>