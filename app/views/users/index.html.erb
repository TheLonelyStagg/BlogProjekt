<h1>Userzy</h1>

<table>
  <tr>
    <th>Nazwa</th>
    <th>Haslo</th>
    <th>Imie</th>
    <th>Nazwisko</th>
    <th>Mail</th>
    <th>Numer</th>
    <th>IsAdmin</th>
    <th></th>
  </tr>

<% for u in @users %>
  <tr>
    <td><%=h u.username %></td>
    <td><%=h u.password %></td>
    <td><%=h u.name %></td>
    <td><%=h u.surname %></td>
    <td><%=h u.email %></td>
    <td><%=h u.phoneNumber %></td>
    <td><%=h (u.is_admin)? "owwYeah" : "nope" %></td>
    <td><%= link_to 'Usun', u, method: :delete, data: {confirm: 'Czy aby na pewno?'} %> |
    <%= link_to 'Edytuj', edit_user_path(u) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Dodaj Usera', new_user_path %>