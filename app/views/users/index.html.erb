<h1>Userzy</h1>

<table>
  <tr>
    <th>Nazwa</th>
    <th>Haslo</th>
    <th>Imie</th>
    <th>Nazwisko</th>
    <th>Mail</th>
    <th>Numer</th>
    <th>IsAdmin</th>
  </tr>

<% for u in @users %>
  <tr>
    <td><%=h u.username %></td>
    <td><%=h u.password %></td>
    <td><%=h u.name %></td>
    <td><%=h u.surname %></td>
    <td><%=h u.email %></td>
    <td><%=h u.phoneNumber %></td>
    <td><%=h (u.is_admin)? "owwYeah" : "nope" %></td>
    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Dodaj Usera', new_user_path %>