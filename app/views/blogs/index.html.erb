<h1>Blogi</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Nazwa</th>
    <th>Wlasciciel</th>
    <th>Data</th>
    <th></th>
    <th></th>
  </tr>

<% for blog in @blogs %>
  <tr>
    <td><%=h blog.id %></td>
    <td><%=h blog.name %></td>
    <td><%=h @users.find{|item| item.id == blog.user_id}.username %></td>
    <td><%=h blog.dataZalozenia %></td>
    <td><%= link_to 'Przejdz', blog_posts_path(blog.id) %></td>

    <% if(logged_in? && (current_user.id == blog.user.id ||  current_user.is_admin )) %>
      <td><%= link_to 'Edit', edit_blog_path(blog.id) %></td>
      <td><%= link_to 'Delete', blog_path(blog),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>
<br />


<%= (logged_in?)?(link_to 'Dodaj bloga'  , new_blog_path): nil %>
