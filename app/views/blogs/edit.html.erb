
<div class="container-fluid">

  <div class="row">

    <div class="col">
      <p></p>
    </div>

    <div class="col-6">
      <div>
        <%= form_for(@blog) do |form| %>

          <h1>Edytuj blog</h1>

          <p>
            <%= form.label :name, "Nazwa blogu" %><br />
            <%= form.text_field :name, class: 'form-control' %>
          </p>

          <p>
            <%= form.label :rodzajeblogu, "Rodzaje blogu" %> <br/>
            <%= form.text_field :rodzajeblogu, class: 'form-control' %>
          </p>

          <p>
            <%= form.submit "Potwierdz" %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="col">
      <p></p>
    </div>
  </div>


</div>