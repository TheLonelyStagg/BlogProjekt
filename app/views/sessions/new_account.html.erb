<h1>Rejestracja</h1>

<%= form_with scope: :user, url: {controller: 'sessions',action: 'create_account'}, local: true do |form| %>


  <p>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </p>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :surname %><br>
    <%= form.text_field :surname %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :phoneNumber %><br>
    <%= form.text_field :phoneNumber %>
  </p>


  <p>
    <%= form.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', login_path %>

